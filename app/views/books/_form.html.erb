<%= simple_form_for @book do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <br />
  <%= f.file_field :book_img %>
  <%= f.input :title, label: "Book Titile" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.submit %>
<% end %>