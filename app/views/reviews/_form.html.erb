
<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
<div id="rating-form">
  <label>Rating</label>
</div>
<%= f.input :comment %>
<%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>