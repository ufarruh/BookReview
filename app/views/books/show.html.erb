<div class="row">

  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
  </div>

  <div class="col-md-8">
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <p><%= @book.description %></p>
  </div>

</div>

<div class="row">
  <div class="col-md-4">
    <!-- Place for comment/rating-->
    <%= render @book.reviews %>
<br />
<div>
  <%= link_to "Add Review", new_book_review_path(@book), class: 'btn btn-primary btn-sm' %>
</div>
<br />
  </div>
</div>
<%= link_to 'Back', root_path, class: 'btn btn-success' %>

<% if user_signed_in? %>

<% if @book.user_id == current_user.id %>

  <%= link_to 'Edit Book', edit_book_path(@book), class: 'btn btn-primary' %>
  <%= link_to 'Delete Book', book_path(@book), method: :delete, data: {confirm: "Are you sure? "}, class: 'btn btn-danger' %>
  <br /><br />
  <% end %>

<% end %>